<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleEstoque.Pages.View.ButtonsCrudView">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="CenterAndExpand">
            <Button Text="Inserir" Command="{Binding InsertCommand}"/>
            <Button Text="Editar" Command="{Binding UpdateCommand}" IsEnabled="{Binding IsUpdateEnable}"/>
            <Button Text="Apagar" Command="{Binding DeleteCommand}" IsEnabled="{Binding IsDeleteEnable}"/>
            <Button Text="Pesquisar" Command="{Binding SearchCommand}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>